<%- include('partials/header') %>
    <!-- <div class="form"> -->
    <h1>Owner Listings</h1>

    <table border="1" style="width: 100%; text-align: center;" class="customers">
        <thead>
            <tr>
                <th rowspan="2">Contact Number</th>
                <th rowspan="2">Property Name</th>
                <th rowspan="2">Type</th>
                <th rowspan="2">Map</th>
                <th rowspan="2">Tenant Contract</th>
                <th rowspan="2">Status</th>
                <th rowspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% owners.forEach(owner => { %>
                <tr>
                  
                    <td><%= owner.contactNumber %></td>
                    <td><%= owner.propertyName %></td>
                    <td><%= owner.type %></td>
                    <td><%= owner.map %></td>
                    <td>
                        <ul>
                            <% if (owner.tenantContract) { %>
                                <a href="/<%= owner.tenantContract.replace('public/', '') %>" target="_blank">
                                    <%= owner.tenantContract.split('/').pop() %> <!-- Display only the file name -->
                                </a>
                            <% } else { %>
                                <li>No Tenant Contract</li> <!-- Display a message if tenantContract is missing -->
                            <% } %>
                        </ul>
                    </td>
                    <td><%= owner.status %></td>
                    <td>
                        <form action="/admin/confirm/<%= owner._id %>" method="POST" style="display:inline;">
                            <button class="btn" type="submit">Confirm</button>
                        </form>
                        <form action="/admin/cancel/<%= owner._id %>" method="POST" style="display:inline;">
                            <button class="btn" type="submit">Cancel</button>
                        </form>
                        <a class="btn" href="/admin/view/<%= owner._id %>"><button>View</button></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</div>
